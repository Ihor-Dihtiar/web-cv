                                    span.value Ihor
                                .info-block-item
                                    span.key Age : 
                                    span.value 31 Years
                                .info-block-item
                                    span.key Email : 
                                    span.value ihordihtiar@gmail.com
                                .info-block-item
                                    span.key GitHub : 
                                    span.value github.com/Ihor-Dihtiar
                                .info-block-item
                                    span.key Adress : 
                                    span.value Ukraine, Melitopol
                    .about-right-block
                        .foto
                            img(src="../img/its-me.png", alt="")

