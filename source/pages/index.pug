extends ./components/_base-template

block main

    .page-wrapper

        //------------header-------------
        header.header.shift(id='home')
            .container
                .header-inner

                    .header-background
                        img(src="../img/bg-img.png", alt="")

                    
                    
                    //------------title-------------
                    .header-main
                        h1.header-title Ihor Dihtiar
                        .header-subtitle
                            span #Web Developer
                            span #Systems Engineer
                        a.header-hire(href="") Hire Me!

        //------------section about me-------------
        section.about.shift(id="about")
            .container
                .about-inner
                    .about-left-block
                        .info-wrapper
                            h2.info-title About me
                            .info-text Lorem ipsum dolor sit amet, ectetuer nonummy nibh euismod tincidunt ut laoreet  magna  laoreet  aliquam erat volutpat.
